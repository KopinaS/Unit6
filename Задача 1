import os
import argparse

parser = argparse.ArgumentParser(description='A tutorial of argparse')
parser.add_argument('-n', '--name', nargs='?', default='Anonymous', help="Ваше имя")
parser.add_argument('-p', '--path', help="Путь к документу")
parser.add_argument('-nQ', '--noQ', action="store_true", help="Больше вопросов нет")
args = parser.parse_args()
print(f'Hi {args.name}!')
print(args)

if os.path.exists(args.path):
    if args.noQ:
        os.remove(args.path)
        exit(0)
    else:
        ag = input(f'\n{args.name}, хотите удалить этот файл? ').capitalize()
        if ag[0] == 'Y':
            os.remove(args.path)
        else:
            print('Хорошо, я ничего не сделал')
else:
    print("\nИзвините, но файла не существует")
